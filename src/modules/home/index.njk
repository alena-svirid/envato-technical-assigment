        <div class="page_container">
            {% include "../header/index.njk" %}
            <div class="home-screen_counter">
                {% include "../counter/index.njk" %}
            </div>
        </div>    
    </div>
    <div class="page_container">
        <div class="home-screen_event">
            <div class="home-screen_text">
                <h1 class="home-screen_title">{{home.title}}</h1>
                <p class="home-screen_description">{{home.description_text1}}</p>
                <p class="home-screen_description">{{home.description_text2}}</p>
                <p class="home-screen_description">{{home.description_text3}}</p>
            </div>
            <div class="home-screen_form">
                <h2 class="home-screen_form-title">{{home.form_title}}</h2>
                {% include "../form/index.njk" %}
            </div>
        </div>    
    </div>
